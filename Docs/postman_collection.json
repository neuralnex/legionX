{
  "info": {
    "name": "LegionX API - Wallet Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API for LegionX marketplace with wallet-based authentication"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"wallet\": \"addr_test1qz2fxv2umyhttkxyxp8x0dlpdt3k6cwng5pxj3jhsydzer3jcu5d8ps7zex2k2xt3uqxgjqnnj83ws8lhrn648jjxtwq2ytjqp\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login with Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet\": \"addr_test1qz2fxv2umyhttkxyxp8x0dlpdt3k6cwng5pxj3jhsydzer3jcu5d8ps7zex2k2xt3uqxgjqnnj83ws8lhrn648jjxtwq2ytjqp\",\n  \"signature\": \"hex_signature_of_challenge\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Auth Challenge",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet\": \"addr_test1qz2fxv2umyhttkxyxp8x0dlpdt3k6cwng5pxj3jhsydzer3jcu5d8ps7zex2k2xt3uqxgjqnnj83ws8lhrn648jjxtwq2ytjqp\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/challenge",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "challenge"]
            }
          }
        }
      ]
    },
    {
      "name": "Listings",
      "item": [
        {
          "name": "Get All Listings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/listings",
              "host": ["{{baseUrl}}"],
              "path": ["listings"]
            }
          }
        },
        {
          "name": "Create Listing",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"AI Model v2.0\",\n  \"description\": \"Advanced NLP model\",\n  \"price\": 500,\n  \"modelMetadata\": {\n    \"type\": \"text-generation\",\n    \"architecture\": \"LLaMA-2\",\n    \"parameters\": \"7B\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/listings",
              "host": ["{{baseUrl}}"],
              "path": ["listings"]
            }
          }
        }
      ]
    },
    {
      "name": "Purchases",
      "item": [
        {
          "name": "Create Purchase",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"listingId\": \"clp1h3h6a000008l0e5v3e5v3\",\n  \"paymentAddress\": \"addr_test1qp0al5v8mvwv9rzssnq5cd3dl5xrg9f5vvt8h0crqfz9q2f4v5h2qhqz8sf5v4j5r0v4q7r5v8mvwv9rzssnq5cd3dl5xrg9f5vvt8h0crqfz9q2f4v5h2qhqz8sf5v4j5r0v4q7\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/purchases",
              "host": ["{{baseUrl}}"],
              "path": ["purchases"]
            }
          }
        }
      ]
    },
    {
      "name": "IPFS",
      "item": [
        {
          "name": "Upload Model Files",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": "/path/to/model_files.zip"
                },
                {
                  "key": "metadata",
                  "type": "text",
                  "value": "{\"name\":\"MyModel\",\"version\":\"1.0.0\"}"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ipfs/upload",
              "host": ["{{baseUrl}}"],
              "path": ["ipfs", "upload"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string",
      "description": "Obtain from login response"
    },
    {
      "key": "walletAddress",
      "value": "addr_test1qz2fxv2umyhttkxyxp8x0dlpdt3k6cwng5pxj3jhsydzer3jcu5d8ps7zex2k2xt3uqxgjqnnj83ws8lhrn648jjxtwq2ytjqp",
      "type": "string"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Set your environment variables here if needed"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "protocolProfileBehavior": {
    "disableBodyPruning": true
  }
}