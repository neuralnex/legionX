{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JS features
    "module": "NodeNext",                        // ESM output
    "moduleResolution": "NodeNext",            // ESM-aware resolution
    "outDir": "dist",                          // Output directory
    "rootDir": "src",                          // Source directory
    "strict": true,                            // All strict type checks
    "esModuleInterop": true,                   // CJS/ESM interop
    "skipLibCheck": true,                      // Faster builds
    "forceConsistentCasingInFileNames": true,  // Case-sensitive imports
    "resolveJsonModule": true,                  // Allow importing JSON
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,        // Allow .ts extensions in imports
    "verbatimModuleSyntax": true              // Preserve import/export syntax
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}